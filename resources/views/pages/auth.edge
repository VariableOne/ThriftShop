<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
  <title>Authentication Page</title>
</head>

@vite(['resources/css/app.css','resources/js/app.js'])

<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-body p-4 p-sm-7">
            <div class="card-body p-4 p-sm-4">
              <h4 class="mb-0 text-center">Bei ThriftShop anmelden</h4>
            </div>
            <!-- Anmeldungsprotokoll-->
            <form action="/auth" method="POST">
              {{csrfField()}}
              <div class="form-floating mb-4">
                <input type="name" class="form-control" name="username" id="username" placeholder="Username">
                <label for="floatingInput">Username</label>
              </div>
              <div class="form-floating mb-4">
                <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                <label for="floatingPassword">Passwort</label>
              </div>
              <div class="form-check mb-3">
                <div class="d-grid">
                  <a href="#" class="text-muted" id="registrate">Noch nicht registriert?</a>
                </div>
              </div>
              <div class="d-grid">
                <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit" id="authenticate">
                  Anmelden
                </button>
              </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row justify-content-center mt-7">
      <div class="col-md-4">
        <!-- Fehlermeldung, wenn benutzername oder Passwort falsch ist-->
        @if(loginError)
        <div class="alert alert-danger d-flex align-items-center justify-content-center" role="alert" id="warning"
          style="visibility: visible;">
          {{loginError}}
          <button type="button" class="btn-close" aria-label="Close"
            onclick="document.getElementById('warning').style.visibility = 'hidden';" id="close_btn"></button>
        </div>
        @endif
      </div>
    </div>
  </div>
  </form>
</body>

</html>