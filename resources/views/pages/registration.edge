<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script src="/resources/js/registration.js"></script>
    <link rel="stylesheet" href="/resources/js/profile.css">
</head>

@vite(['/resources/js/app.js', '/resources/js/app.js'])
@vite(['resources/css/app.css', 'resources/js/app.js'])

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-4">
                        <h4 class="mb-0 text-center">Registrieren bei ThriftShop</h4>
                    </div>
                    <div class="card-body">
                        <form action="/registration" method="POST">
                            {{ csrfField() }}

                            <div class="form-group mb-3">
                                <label for="username">Benutzername</label>
                                <input type="text" class="form-control" name="username" id="username"
                                    placeholder="Benutzername">
                            </div>
                            <div class="form-group mb-3">
                                <label for="email">Email Adresse</label>
                                <input type="email" class="form-control" name="email" id="email" placeholder="Email">
                            </div>
                            <div class="form-group mb-3">
                                <label for="password">Passwort</label>
                                <input type="password" class="form-control" name="password" id="password"
                                    placeholder="Passwort">
                            </div>
                            <div class="form-group mb-4">
                                <label for="confirmPassword">Bestätigtes Passwort</label>
                                <input type="password" class="form-control" name="confirmPassword" id="confirmPassword"
                                    placeholder="Bestätigendes Passwort">
                            </div>
                            <div class="form-group mb-3">
                                <div class="d-grid">
                                    <a href="/auth" class="text-muted" id="authenticate">Doch angemeldet?</a>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-block"
                                        id="regBtn">Registrieren</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-2">
            <div class="col-md-4">
                @if(registrationError)
                <div class="alert alert-danger d-flex align-items-center" role="alert" id="warning">
                    {{registrationError}}
                    <button type="button" class="btn-close" aria-label="Close"
                        onclick="document.getElementById('warning').style.visibility = 'hidden';"
                        id="close_btn"></button>
                </div>
                @endif
            </div>
        </div>
    </div>
</body>

</html>