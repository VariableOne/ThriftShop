@vite(['resources/css/app.css', 'resources/js/app.js'])
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card border-0 shadow rounded-3 my-5">
                    <div class="card-body p-4 p-sm-4">
                        <h4 class="mb-0 text-center">Registrieren bei ThriftShop</h4>
                    </div>
                    <div class="card-body">
                        <form action ="/registration" method = "POST">
                            {{ csrfField() }}
                          
                            <div class="form-group mb-3">
                                <label for="username">Benutzername</label>
                                <input type="text" class="form-control" name="username" id="username"placeholder="Benutzername">
                            </div>
                            <div class="form-group mb-3">
                                <label for="email">Email Adresse</label>
                                <input type="email" class="form-control" name="email" id="email" placeholder="Email">
                            </div>
                            <div class="form-group mb-3">
                                <label for="password">Passwort</label>
                                <input type="password" class="form-control" name="password" id="password" placeholder="Passwort">
                            </div>
                            <div class="form-group mb-4">
                                <label for="confirmPassword">Bestätigtes Passwort</label>
                                <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Bestätigendes Passwort">
                            </div>
                            <div class="form-group mb-3">
                            <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block" id="regBtn">Registrieren</button>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-2">
            <div class="col-md-4">
                @if(registrationError)
                <div class="alert alert-danger d-flex align-items-center" role="alert" id="password_warning">
                   {{registrationError}}
                    <button type="button" class="btn-close" aria-label="Close" id="close_btn_reg" onclick="closeAlert()"></button>
                </div>
                @endif
            </div>
        </div>
    </div>

