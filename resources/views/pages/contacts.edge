<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Contacts</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: lightblue; 
        }

        .container {
            background-color: #ffffff; 
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        
    </style>
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Contacts</h1>
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div>
                    @if(users.length > 0)
                        @each (user in users)
                        <div class="list-group-item list-group-item">
                            <div class="profile-container" style="width: 100px; height: 100px; overflow: hidden; border-radius: 50%; background-color: lightgray; margin-bottom: 10px;">
                                <img src="/uploads/{{user.profile_picture}}" style="width: 100%; height: 100%; object-fit: cover;">
                            </div>
                            <h5 class="mb-3"> {{ user.username }}</h5>
                            <a href = "/mailbox/{user.username}">
                            <button class="btn btn-primary mr-3" type = "submit">Zum Kontakt</button>
                            </a>
                        </div>           
                        <br>             
                        @endeach
                    @else
                        <div class="list-group-item">Keine Nachrichten vorhanden</div>
                    @endif
                    <br>
                    <form action ="/mailbox" method="POST">
                    {{ csrfField() }}
                    <button class="btn btn-info" type = "submit">Zur√ºck</button>
                    </form>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
