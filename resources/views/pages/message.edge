<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Chat</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

@vite(['/resources/css/chat.css', '/resources/js/app.js'])
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Chat mit {{ contact }}</h1>
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div>
                    @if (messages.length > 0)
                        @each (message in messages)
                            <div class="list-group-item list-group-item d-flex justify-content-between"
                                 style="background-color: {{ user.id === message.sender_id ? '#F0F8FF' : 'white' }}">
                                <div>
                                    <p>{{ message.username }}</p>
                                    <div class="profile-container" style="width: 50px; height: 50px; overflow: hidden; border-radius: 50%; background-color: lightgray; margin-bottom: 10px;">
                                        <img src="/uploads/{{ message.profile_picture }}" style="width: 100%; height: 100%; object-fit: cover;">
                                    </div>
                                    <p class="mb-3">{{ message.message }}</p>
                                </div>
                                <div>
                                    <small>{{ message.created_at }}</small>
                                </div>
                            </div>
                        @endeach
                    @else
                        <div class="list-group-item">Keine Nachrichten vorhanden</div>
                    @endif
                    <br>
                    <form action="/message/{{ contact }}" method="POST">
                        {{ csrfField() }}
                        <div class="form-group">
                            <label for="message">Neue Nachricht:</label>
                            <textarea class="form-control" id="message" name="message" rows="3" required></textarea>
                        </div>
                        <input type="hidden" name="contact" value="{{ contact }}">
                        <button class="btn btn-success" type="submit">Senden</button>
                    </form>
                    <br>
                    <a href = "/contacts">
                    <button class="btn btn-info" type = "button">ZurÃ¼ck</button>
                    </a>
                </div>
            </div>
        </div>
        
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
