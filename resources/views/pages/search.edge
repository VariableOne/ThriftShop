<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <title> Searching Page </title>
</head>

@vite(['/resources/js/home.js', '/resources/js/home.js'])
@vite(['/resources/css/home.css', '/resources/css/home.css'])
<body>
@include('pages/header')
<div id="notification" class="notification"></div>
<div class="container">
    <div class="row">
      @each(newad in newads)
      @if (!newad.deactivated)
        <div class="col-md-4">
            <br>
            <div class="card" id = "newad_container" style="width: 350px; height: auto;">
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-md-2">
                            <div class="profile-container" style="width: 50px; height: 50px; overflow: hidden; border-radius: 50%; background-color: lightgray; margin-bottom: 10px;">
                                <img src="/uploads/{{ newad.profile_picture }}" style="width: 100%; height: 100%; object-fit: cover;">
                            </div>
                        </div>
                        <div class="col-md-9 d-flex align-items-center">
                            <h5 class="card-title">{{ newad.username }}</h5>
                        </div>
                    </div>
                    <hr style="border-top: 1px solid #555;">
                    <div class="row">
                        <div class="col-md-12">
                            <img src="/uploads/{{ newad.image }}" class="card-img-top" style="width: 300px; height: 200px;">
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <h5 class="card-title">{{ newad.title }}</h5>
                            <p class="card-text">{{ newad.price }} €</p>
                            <svg xmlns="http://www.w3.org/2000/svg" id="on_wishlist" width="16" height="16" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                              <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15"/>
                            </svg>
                        </div>
                    </div>
                    <hr style="border-top: 1px solid #555;">
                    
                </div>
                <div class="card-body" style="display: none; border: 1px solid aliceblue; margin-top: 20px; padding: 10px; background-color: white">
                    <p class="card-text"><b>Beschreibung:</b> {{newad.description }}</p>
                    <p class="card-text"><b>Adresse:</b> {{ newad.adress }}</p>
                    <p class="card-text"><b>Zustand:</b> {{ newad.state }}</p>
                </div>
            </div>
        </div>
        @endif
        @endeach
    </div>
</div>
</body>

<script>

  document.addEventListener("DOMContentLoaded", function () {
      const cards = document.querySelectorAll(".card");
  
      cards.forEach(card => {
        card.addEventListener("mouseover", function () {
          this.querySelector(".card-body:last-child").style.display = "block";
        });
  
        card.addEventListener("mouseleave", function () {
          this.querySelector(".card-body:last-child").style.display = "none";
        });
      });
    });

    document.addEventListener("DOMContentLoaded", function () { 

      on_wishlist.addEventListener("click", function () {
          on_wishlist.style.color= "red";
          showNotification('Erfolgreich zur Wunschliste hinzugefügt');
          
        });

        function showNotification(message) {
        var notification = document.getElementById('notification');
        notification.innerText = message;
        notification.style.display = 'block';
        setTimeout(function() {
        notification.style.display = 'none';
    }, 3000); 
}
      });



   
  </script>

  <style>

.notification {
    position: fixed;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    background-color: #4CAF50;
    color: white;
    padding: 15px;
    z-index: 9999;
    display: none;
    animation: slideIn 0.5s ease-out;
}

@keyframes slideIn {
    0% {
        transform: translate(-50%, -100%);
    }
    100% {
        transform: translate(-50%, 0);
    }
}

  </style>
</html>
